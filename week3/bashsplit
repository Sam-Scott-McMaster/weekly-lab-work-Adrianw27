#
# A bash script that splits all words from standard input onto seperate lines until EOF.

#!/bin/bash

if [[ $# -gt 0 ]]
then
	echo "No arguments accepted. Aborting." >&2
	exit 1
else
	while read line
	do 
		for word in $line
		do
			echo "$word"
		done
	done
fi


